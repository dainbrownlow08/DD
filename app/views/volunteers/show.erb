
<h1><%=@volunteer.name%>'s Volunteer Page</h1>
<%= button_to "Edit User Info",edit_volunteer_path,method: :get%>
<h3>Here are the possible trips you can select</h3>
<table class="table" style="width:60%">
    <tr>
        <th>Trip ID</th>
        <th>Info</th>
        <th>Distance</th>
        <th>Link</th>
    </tr>
    <%@trips.each do |trip|%>
    <tr>
        <td><%=trip.id%></td>
        <td><%="#{trip.grocery_store.name} to #{trip.food_bank.name}"%></td>
        <td><%=trip.distance(@volunteer)%> mi</td>
        <td><%=link_to "Trip", trip%></td>
    <%end%>
    </tr>

</table><br>
